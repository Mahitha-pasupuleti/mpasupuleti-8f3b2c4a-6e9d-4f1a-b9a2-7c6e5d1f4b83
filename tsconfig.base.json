{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    /* FIX: This must be present if 'paths' is used */
    "baseUrl": ".", 
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node16",
    "module": "node16",
    "target": "es2022",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@ngtestwrk/data": ["libs/data/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}